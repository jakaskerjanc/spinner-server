generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Event {
  id             Int          @id
  lat            Int
  lon            Int
  description    String?      @db.VarChar(2048)
  createTime     DateTime
  reportTime     DateTime
  municipalityId Int
  title          String?
  onGoing        Boolean
  eventTypeId    Int
  municipality   Municipality @relation(fields: [municipalityId], references: [id])
  eventType      EventType    @relation(fields: [eventTypeId], references: [id])

  @@index([eventTypeId])
  @@index([municipalityId])
  @@index([onGoing])
  @@index([lat, lon])
  @@fulltext([description])
  @@fulltext([title])
}

model LargeEvent {
  id             Int          @id @default(autoincrement())
  createTime     DateTime
  description    String       @db.VarChar(4096)
  municipalityId Int
  municipality   Municipality @relation(fields: [municipalityId], references: [id])

  @@unique([createTime, municipalityId])
  @@index([municipalityId])
  @@fulltext([description])
}

model EventType {
  name  String  @unique
  id    Int     @id
  Event Event[]
}

model Municipality {
  name           String                 @unique
  id             Int                    @id
  MID            Int                    @unique
  outlinePolygon Unsupported("polygon")
  events         Event[]
  largeEvents    LargeEvent[]
}

model Log {
  id             Int      @id @default(autoincrement())
  logTime        DateTime @default(now())
  changedEntries Int
  updated        Change
}

enum Change {
  UPDATE_ONGOING
  FETCH_LATEST
}
